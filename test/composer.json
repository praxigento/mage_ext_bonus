{
  "name": "praxigento/mage_ext_bonus_test",
  "type": "project",
  "license": "MIT",
  "homepage": "https://github.com/praxigento/mage_ext_bonus",
  "description": "Test and development application for 'mage_ext_bonus' extension.",
  "repositories": [
    {
      "type": "composer",
      "url": "http://packages.firegento.com"
    },
    {
      "type": "vcs",
      "url": "https://github.com/astorm/PulsestormModuleList"
    },
    {
      "type": "vcs",
      "url": "https://github.com/praxigento/mage_ext_log4php"
    },
    {
      "type": "vcs",
      "url": "https://github.com/praxigento/mobi_mage_bundle"
    },
    {
      "type": "vcs",
      "url": "https://github.com/praxigento/mobi_mage_core"
    },
    {
      "type": "vcs",
      "url": "https://github.com/praxigento/mobi_mage_theme"
    },
    {
      "type": "vcs",
      "url": "https://github.com/praxigento/mage_ext_bonus"
    }
  ],
  "require": {
    "magento-hackathon/magento-composer-installer": "*",
    "magento-hackathon/composer-command-integrator": "1.0",
    "praxigento/composer_plugin_templates": "^1.0",
    "magento/core": "1.9.2.0",
    "astorm/PulsestormModuleList": "^0.2",
    "praxigento/mage_ext_bonus": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "3.7.*"
  },
  "autoload": {
    "psr-4": {
      "Praxigento\\Deploy\\": "bin/deploy"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "find ./bin/ -type f -name \"*.sh\" -exec chmod a+x {} \\;",
      "rm ./mage/app/etc/local.xml",
      "Praxigento\\Deploy\\Installer::postInstall"
    ],
    "post-update-cmd": [
      "find ./bin/ -type f -name \"*.sh\" -exec chmod a+x {} \\;"
    ]
  },
  "extra": {
    "magento-root-dir": "mage",
    "magento-deploystrategy": "symlink",
    "magento-force": true,
    "auto-append-gitignore": false,
    "praxigento_templates_config": [
      "./templates.json",
      "./cfg/templates.json"
    ]
  },
  "minimum-stability": "dev"
}
